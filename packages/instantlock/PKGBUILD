# Maintainer: paperbenni <paperbenni@gmail.com>

pkgname=instantlock
_pkgname=$pkgname
pkgver=202105221416
pkgrel=1
pkgdesc='lock screen for instantOS'
url='https://github.com/instantOS/instantLOCK.git'
arch=('any')
license=('MIT')
makedepends=('git')
depends=('libxrandr' 'libxinerama')
source=("$_pkgname::git+https://github.com/instantOS/instantLOCK.git")
sha256sums=('SKIP')

provides=("${_pkgname}" "instantlock")
conflicts=("${_pkgname}" "instantlock")

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

build() {
    cd "${srcdir}/${_pkgname}"
    make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
    cd "${srcdir}/${_pkgname}"
    make PREFIX=/usr DESTDIR="${pkgdir}" install
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
