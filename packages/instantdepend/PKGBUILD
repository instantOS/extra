# Maintainer: paperbenni <paperbenni@gmail.com>
_pkgname=instantdepend
pkgname=$_pkgname
pkgver=20204923be4c9bc
pkgrel=1
pkgdesc="meta package for instantOS dependencies"
url="https://github.com/instantOS/instantMETA"
arch=('any')
license=('GPL2')
depends=('picom'
    'xorg-xrandr'
    'slop'
    'xorg-xsetroot'
    'autoconf'
    'automake'
    'binutils'
    'bison'
    'noto-fonts-emoji'
    'fakeroot'
    'flex'
    'gcc'
    'libtool'
    'm4'
    'make'
    'patch'
    'pkgconf'
    'p7zip'
    'dash'
    'ueberzug'
    'tmux'
    'git'
    'subversion'
    'dialog'
    'neovim'
    'yazi'
    'fzf'
    'inter-font'
    'kitty'
    'ranger'
    'sl'
    'playerctl'
    'xclip'
    'ffmpeg'
    'feh'
    'arandr'
    'lxappearance'
    'conky'
    'dunst'
    'xdotool'
    'wmctrl'
    'xclip'
    'nautilus'
    'cpio'
    'starship'
    'pavucontrol'
    'pipewire'
    'pipewire-pulse'
    'pipewire-alsa'
    'wireplumber'
    'zsh'
    'zenity'
    'zoxide'
    'mise'
    'jq'
    'topgrade-bin'
    'htop'
    'pa-applet-git'
    'network-manager-applet'
    'lxqt-policykit'
    'autorandr'
    'commandfinder'
    'xorg-xinput'
    'xfce4-power-manager'
    'blueman'
    'dmidecode'
    'alacarte'
)

makedepends=('bash' 'curl' 'git')
provides=(instantdepend)
conflicts=(instantdepend)
source=("$_pkgname::git+https://github.com/instantOS/instantMETA.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

package() {
    depends+=('yay'
        'xdragon'
        'paperbash'
        'rofi'
        'i3-wm'
        'udevwait'
        'plymouth'
        'plymouth-theme-instantos')

    cd $_pkgname
    mkdir -p ${pkgdir}/usr/share/instantos
    echo 'instantdependpackages' >${pkgdir}/usr/share/instantos/dpackages
    curl -s https://raw.githubusercontent.com/instantOS/instantOS/refs/heads/main/LICENSE >LICENSE
    install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
