# Maintainer: paperbenni <paperbenni@gmail.com>
_pkgname=snap-dummy
pkgname=$_pkgname
pkgver=202004292231
pkgrel=1
pkgdesc="a tiny program that warns about snaps"
url="https://github.com/instantOS/snap-dummy"
arch=('any')
license=('GPL2')
depends=('sh' 'python')
makedepends=('git' 'curl')
provides=(snap)
conflicts=(snapd)
source=("$_pkgname::git+https://github.com/instantOS/snap-dummy.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

package() {
    cd $_pkgname
    mkdir -p ${pkgdir}/usr/bin

    chmod +x *.sh
    mv *.sh ${pkgdir}/usr/bin/snap
    curl -s https://raw.githubusercontent.com/instantOS/instantOS/refs/heads/main/LICENSE >LICENSE
    install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

}
