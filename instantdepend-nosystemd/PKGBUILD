# Maintainer: paperbenni <paperbenni@gmail.com>
_pkgname=instantdepend-nosystemd
pkgname=$_pkgname
pkgver=20204923be4c9bc
pkgrel=1
pkgdesc="meta package for instantOS dependencies for systems without systemd"
url="https://github.com/instantOS/instantMETA"
arch=('any')
license=('GPL2')
depends=('picom'
    'arc-gtk-theme'
    'xorg-xrandr'
    'slop'
    'xorg-xsetroot'
    'xorg-fonts-misc'
    'autoconf'
    'automake'
    'binutils'
    'bison'
    'fakeroot'
    'flex'
    'gcc'
    'libtool'
    'm4'
    'make'
    'patch'
    'pkgconf'
    'p7zip'
    'dash'
    'ueberzug'
    'tmux'
    'git'
    'subversion'
    'dialog'
    'neovim'
    'fzf'
    'ranger'
    'sl'
    'playerctl'
    'xclip'
    'ffmpeg'
    'feh'
    'arandr'
    'qt5ct'
    'lxappearance'
    'conky'
    'dunst'
    'xdotool'
    'wmctrl'
    'xclip'
    'nautilus'
    'cpio'
    'pavucontrol'
    'zsh'
    'zenity'
    'jq'
    'htop'
    'pa-applet'
    'network-manager-applet'
    'lxsession'
    'filemanager-actions'
    'autorandr'
    'xorg-xinput'
    'xfce4-power-manager'
    'blueman'
    'dmidecode'
    'light'
    'alacarte'
    'gtk2-perl')

makedepends=('bash' 'curl')
provides=(instantdepend)
conflicts=(instantdepend)
source=("$_pkgname::git+https://github.com/instantOS/instantMETA.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

package() {
    depends+=('yay'
        'xdragon'
        'autojump'
        'paperbash'
        'zsh-syntax-highlighting'
        'rofi'
        'rangerplugins'
        'rox-filer-hugeicons'
        'st-instantos'
        'golaunch'
        'imgur.sh'
        'plymouth-git'
        'plymouth-theme-instantos')

    cd $_pkgname
    mkdir -p ${pkgdir}/usr/share/instantos
    echo 'instantdependpackages' >${pkgdir}/usr/share/instantos/dpackages
    curl -s https://www.gnu.org/licenses/old-licenses/gpl-2.0.txt > LICENSE
    install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
