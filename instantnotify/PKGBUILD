# Maintainer: paperbenni <paperbenni@gmail.com>
_pkgname=instantnotify
pkgname=$_pkgname
pkgver=202102251429
pkgrel=1
pkgdesc="notification center for instantOS"
url="https://github.com/instantOS/instantNOTIFY"
arch=('any')
license=('GPL2')
depends=('sh' 'instantmenu' 'dunst')
makedepends=('git')
provides=(instantnotify)
conflicts=(instantnotify)
source=("$_pkgname::git+https://github.com/instantOS/instantNOTIFY.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

package() {
    cd $_pkgname
    mkdir -p ${pkgdir}/usr/bin
    rm install.sh
    chmod +x ./*.sh
    for i in ./*.sh; do
        mv "$i" "${pkgdir}/usr/bin/${i%.sh}"
    done
    mkdir -p "${pkgdir}/usr/share/instantnotify"
    cp defaults/* "${pkgdir}/usr/share/instantnotify"

    install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
