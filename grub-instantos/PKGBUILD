# Maintainer: paperbenni <paperbenni@gmail.com>
_pkgname=grub-instantos
pkgname=$_pkgname
pkgver=202005141602
pkgrel=1
pkgdesc="the grub theme for instantOS"
url="https://github.com/instantOS/grub-instantos"
arch=('any')
license=('GPL2')
depends=('grub')
makedepends=('git')
provides=(grub-instantos)
conflicts=(grub-instantos)
source=("$_pkgname::git+https://github.com/instantOS/grub-instantos.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    cd $_pkgname

    mkdir -p ${pkgdir}/usr/share/grub/themes/instantos
    rm README.*
    mv ./* ${pkgdir}/usr/share/grub/themes/instantos
}
